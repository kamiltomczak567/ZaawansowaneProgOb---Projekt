<Window x:Class="Bank_krwi.facebookPosts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Posty z facebook" Height="435.821" Width="532.836" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Photos/f.png"/>
        </Grid.Background>
        <Grid x:Name="PostGrid" Margin="45,83,0,73">
            <TextBlock Margin="-10,-34,10,34"><Run Text="Najnowszy post na Facebooku"/></TextBlock>
            <Border HorizontalAlignment="Left" VerticalAlignment="Top"  BorderBrush="Black" BorderThickness="2" Height="251" Width="483" Margin="-13,-12,0,0" />
            <TextBlock Text="{Binding created_time}" Margin="0,0,0,224" />
            <TextBlock Text="{Binding message}" Margin="0,30,10,0" />

        </Grid>
    </Grid>
</Window>
